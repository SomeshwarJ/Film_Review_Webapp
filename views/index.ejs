<div class="container-xxl px-md-5 bg-white">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <a href="/index" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
            <img src="/img/logo.svg" width="229" height="68" alt="Cooking Blog - Made with Node.js">
            <div style="margin-top: 25px;">
              <h2>MoViEpSyCh</h2>
            </div>
        </a>
        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li><a href="/index" class="nav-link px-2 link-secondary">Home</a></li>
            <li><a href="/about" class="nav-link px-2 link-secondary">About</a></li>
            <li><a href="/logout" class="nav-link px-2 link-secondary">Logout</a></li>
        </ul>

        <div class="col-md-3 text-end">
            <form method="POST" action="/search">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search..." aria-label="Search">
                <!-- <div class="col-12"> -->
                    <!-- <button type="submit" class="btn btn-primary">Search</button> -->
                  <!-- </div> -->
            </form>
        </div>
    </header>
    <div class="row flex-lg-row-reverse align-items-center g-7 py-4 mb-4">
        <div class="col-12 col-lg-6">
            <img src="/img/hero-image(2).png" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy" alt="Cooking With Node.js">
        </div>

        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold mb-3">Huge selection of amazing movies</h1>
            <p class="lead">
                Explore our huge selection of amazing movie collection including; Action, Adventure, Comedy, Drama,
                Horror, Romance, Science fiction, Fantasy, Historical, Crime
            </p>

            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore Latest</a>
            </div>

        </div>

    </div>
    <div class="d-flex mb-2 align-items-center">
      <h2>Generes</h2>
    </div>
    <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
        <% if(cat != '') { %>
          <% cat.forEach(function(category, index) { %>
            <a href="/genere/<%= category.genere %>" class="col text-center category__link">
              <div class="category__img shadow">
                <img src="img/<%- category.img %>" alt="<%- category.name %>" loading="lazy">
              </div>
              <div class="pt-1"><%- category.genere %></div>
            </a>
          <% }) %>
        <% } %>
      </div>
      <section class="pb-4 pt-4">
        <div class="d-flex mb-2 align-items-center">
          <h2>Latest Movies</h2>
        </div>
      
        <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
      
          <% if(latest != '') { %>
            <% latest.forEach(function(lat, index){ %>
            <a href="/details/<%= lat._id%>" class="col text-center category__link">
              <div class="category__img category__img--large shadow">
                <img src="/uploads/<%= lat.img %>" alt="<%= lat.name %>" loading="lazy">
              </div>
              <div class="pt-1"><%= lat.name %></div>
            </a>
            <% }) %>
          <% } else { %>
            <p>No items found.</p>
          <% } %>
        </div>
      
      </section>
</div>